<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    tools:context="ucsd_scholars.tritonfoodpantry.AdminMenuActivity">

    <Button
        android:id="@+id/button_addAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant Administrator Privileges"/>

    <Button
        android:id="@+id/button_revokeAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Revoke Administrator Privileges"/>

    <Button
        android:id="@+id/button_toNotificationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Send Notification" />

    <Button
        android:id="@+id/button_editHomePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Post on News Feed" />

</LinearLayout>
