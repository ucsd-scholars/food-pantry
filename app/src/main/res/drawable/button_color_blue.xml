<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/DeepSkyBlue_Darker"/>
            <!--
                        android:color="@color/Gold_Darker"/>
            -->
            <stroke
                android:width="2dp"
                android:color="@color/DeepSkyBlue_Darker"/>
            <!--
                        android:color="@color/Gold_Darker"/>
            -->
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/DeepSkyBlue"
                android:startColor="@color/DeepSkyBlue"/>
            <!-- android:endColor="@color/Gold_Darker"
             android:startColor="@color/Gold"/>-->

            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>